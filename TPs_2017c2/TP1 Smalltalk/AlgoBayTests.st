TestCase subclass: #AlgoBayTest	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'AlgoBayTests'!!AlgoBayTest methodsFor: 'tests' stamp: 'tomas 9/10/2017 14:42'!test01AgregarProductos	| aBay producto1 |	aBay := AlgoBay new.	self assert: aBay cantidadDeProductos equals: 0.	producto1 := aBay agregarProducto: 'Spinner fluo' conPrecio: 83.	self assert: aBay cantidadDeProductos equals: 1.	self deny: (producto1 = nil)! !!AlgoBayTest methodsFor: 'tests' stamp: 'tomas 9/10/2017 14:47'!test06EnvioBonificadoEnComprasMayoresA5000	| aBay producto1 producto2 compra precio |	aBay := AlgoBay new.	producto1 := aBay agregarProducto: 'Zapatilla Nike Air' conPrecio: 2000.	producto2 := aBay agregarProducto: 'Moto 5G' conPrecio: 4000.	compra := aBay crearNuevaCompraConEnvioYGarantia.	aBay agregar: producto1 enCompra: compra.	aBay agregar: producto2 enCompra: compra.	precio := aBay getPrecioTotalDe: compra.	self assert: precio closeTo: ((6000 + 0) * 1.1).! !!AlgoBayTest methodsFor: 'tests' stamp: 'tomas 9/10/2017 14:46'!test05GarantiaCuesta10Porciento	| aBay producto1 compraSimpleConGarantia compraConEnvioYGarantia precioSimpleConGarantia 	precioConEnvioYGarantia |	aBay := AlgoBay new.	producto1 := aBay agregarProducto: 'Zapatilla Nike Air' conPrecio: 2000.	compraSimpleConGarantia := aBay crearNuevaCompraConGarantia.	compraConEnvioYGarantia := aBay crearNuevaCompraConEnvioYGarantia.	aBay agregar: producto1 enCompra: compraSimpleConGarantia.	aBay agregar: producto1 enCompra: compraConEnvioYGarantia.	precioSimpleConGarantia := aBay getPrecioTotalDe: compraSimpleConGarantia.	precioConEnvioYGarantia := aBay getPrecioTotalDe: compraConEnvioYGarantia.	self assert: precioSimpleConGarantia closeTo: (2000 * 1.1).	self assert: precioConEnvioYGarantia closeTo: ((2000 * 1.1) + 100).! !!AlgoBayTest methodsFor: 'tests' stamp: 'tomas 9/10/2017 14:46'!test03CompraSimple	| aBay producto1 producto2 compra1 precio |	aBay := AlgoBay new.	producto1 := aBay agregarProducto: 'Zapatilla Nike Air' conPrecio: 2100.	aBay agregarProducto: 'Moto 5G' conPrecio: 4300.		aBay agregarProducto: 'Cable USB' conPrecio: 200.	producto2 := aBay getProducto: 'Moto 5G'.	compra1 := aBay crearNuevaCompra.	aBay agregar: producto1 enCompra: compra1.	aBay agregar: producto2 enCompra: compra1.	precio := aBay getPrecioTotalDe: compra1.	self assert: precio closeTo: 6400.! !!AlgoBayTest methodsFor: 'tests' stamp: 'tomas 9/10/2017 14:47'!test08CuponesNoSonAcumulablesValeElMayor	| aBay producto1 cupon20Porciento cupon25Porciento cupon30Porciento compra precio |	aBay := AlgoBay new.	producto1 := aBay agregarProducto: 'Zapatilla Nike Air' conPrecio: 2000.	compra := aBay crearNuevaCompra.	cupon20Porciento := aBay crearCuponConPorcentaje: 20.	cupon25Porciento := aBay crearCuponConPorcentaje: 25.	cupon30Porciento := aBay crearCuponConPorcentaje: 30.	aBay agregarCupon: cupon20Porciento enCompra: compra.	aBay agregarCupon: cupon30Porciento enCompra: compra.	aBay agregarCupon: cupon25Porciento enCompra: compra.	aBay agregar: producto1 enCompra: compra.	precio := aBay getPrecioTotalDe: compra.	self assert: precio closeTo: (2000 * 0.7).! !!AlgoBayTest methodsFor: 'tests' stamp: 'tomas 9/10/2017 14:46'!test04EnvioCuesta100	| aBay producto1 compraSimple compraConEnvio precioSimple precioConEnvio |	aBay := AlgoBay new.	producto1 := aBay agregarProducto: 'Zapatilla Nike Air' conPrecio: 2000.	compraSimple := aBay crearNuevaCompra.	compraConEnvio := aBay crearNuevaCompraConEnvio.	aBay agregar: producto1 enCompra: compraSimple.	aBay agregar: producto1 enCompra: compraConEnvio.	precioSimple := aBay getPrecioTotalDe: compraSimple.	precioConEnvio := aBay getPrecioTotalDe: compraConEnvio.	self assert: precioConEnvio closeTo: (precioSimple + 100).! !!AlgoBayTest methodsFor: 'tests' stamp: 'tomas 9/10/2017 14:43'!test02GetProducto	| aBay producto1 |	aBay := AlgoBa